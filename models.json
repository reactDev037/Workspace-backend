{
  "WorkspaceEntity": {
    "properties": {
      "configFile": {"type": "string"},
      "scriptFile": {"type": "string"},
      "configLineNum": {"type": "number"},
      "locked": {"type": "boolean"}
    },
    "public": false
  },
  "Definition": {
    "properties": {
      "name": {
        "type": "string",
        "id": true,
        "required": true
      },
      "dir": {
        "type": "string",
        "desc": "the directory name where the definition is persisted"
      }
    },
    "public": false,
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "AppDefinition": {
    "properties": {
      "template": "string"
    },
    "public": true,
    "options": {
      "base": "Definition",
      "relations": {
        "models": {
          "type": "hasMany",
          "model": "ModelDefinition",
          "foreignKey": "appName"
        },
        "datasources": {
          "type": "hasMany",
          "model": "DataSourceDefinition",
          "foreignKey": "appName"
        }
      }
    }
  },
  "ModelDefinition": {
    "properties": {
    },
    "public": true,
    "options": {
      "base": "Definition",
      "relations": {
        "properties": {
          "type": "hasMany",
          "model": "ModelProperty",
          "foreignKey": "modelName"
        },
        "relations": {
          "type": "hasMany",
          "model": "ModelRelation",
          "foreignKey": "fromModel"
        },
        "accessControls": {
          "type": "hasMany",
          "model": "ModelAccessControl",
          "foreignKey": "model"
        },
        "methods": {
          "type": "hasMany",
          "model": "ModelMethod",
          "foreignKey": "model"
        },
        "views": {
          "type": "hasMany",
          "model": "ViewDefinition",
          "foreignKey": "model"
        }
      }
    }
  },
  "ModelMethod": {
    "properties": {
    },
    "public": true,
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ViewDefinition": {
    "properties": {
    },
    "public": true,
    "options": {
      "base": "Definition"
    }
  },
  "DataSourceDefinition": {
    "properties": {
      "host": {"type": "string"},
      "port": {"type": "number"},
      "url": {"type": "string"},
      "database": {"type": "string"},
      "username": {"type": "string"},
      "password": {"type": "string"}
    },
    "public": true,
    "options": {
      "base": "Definition",
      "relations": {
        "models": {
          "type": "hasMany",
          "model": "ModelDefinition",
          "foreignKey": "datasource"
        }
      }
    }
  }
}
