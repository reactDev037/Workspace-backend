{
  "ConfigFile": {
    "properties": {
      "path": {"type": "string", "id": true},
      "data": {"type": "any"}
    },
    "dataSource": "db",
    "public": false
  },
  "Workspace": {
    "properties": {
      "name": {"id": true, "type": "string"}
    },
    "public": false,
    "dataSource": "db"
  },
  "PackageDefinition": {
    "properties": {
      "componentName": {"type": "string", "required": true}
    },
    "public": false,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "defaultConfigFile": "package.json",
      "configFiles": [
        "package.json"
      ]
    }
  },
  "ComponentDefinition": {
    "properties": {
      "defaultPermission": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "defaultConfigFile": "config.json",
      "configFiles": [
        "config.json",
        "config.*.json"
      ],
      "relations": {
        "package": {
          "type": "hasOne",
          "model": "PackageDefinition",
          "foreignKey": "componentName"
        },
        "models": {
          "type": "hasMany",
          "model": "ModelDefinition",
          "foreignKey": "componentName"
        },
        "datasources": {
          "type": "hasMany",
          "model": "DataSourceDefinition",
          "foreignKey": "componentName"
        }
      }
    }
  },
  "ComponentModel": {
    "properties": {
      "name": {"type": "string", "id": true}
    },
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity",
      "defaultConfigFile": "models.json",
      "configFiles": ["models.json"],
      "relations": {
        "component": {
          "type": "belongsTo",
          "model": "ComponentDefinition",
          "foreignKey": "componentName"
        },
        "dataSource": {
          "type": "belongsTo",
          "model": "DataSourceDefinition",
          "foreignKey": "dataSource"
        },
        "definition": {
          "type": "hasOne",
          "model": "ModelDefinition",
          "foreignKey": "name"
        }
      }
    }
  },
  "ModelDefinition": {
    "properties": {
      "plural": "string",
      "strict": "boolean",
      "scopes": "array",
      "public": "boolean",
      "indexes": "array",
      "componentName": {"type": "string", "required": true},
      "dataSource": "string"
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "defaultDir": "models",
      "defaultConfigFile": "models/$name.json",
      "configFiles": [
        "models/*.json"
      ],
      "configExtensions": ["json"],
      "relations": {
        "properties": {
          "embed": {"as": "object", "key": "name"},
          "type": "hasMany",
          "model": "ModelProperty",
          "foreignKey": "modelName"
        },
        "validations": {
          "embed": {"as": "array"},
          "type": "hasMany",
          "model": "PropertyValidation",
          "foreignKey": "modelName"
        },
        "relations": {
          "embed": {"as": "object", "key": "as"},
          "type": "hasMany",
          "model": "ModelRelation",
          "foreignKey": "fromModel"
        },
        "accessControls": {
          "embed": {"name": "acls", "as": "array"},
          "type": "hasMany",
          "model": "ModelAccessControl",
          "foreignKey": "model"
        },
        "methods": {
          "embed": {"as": "array"},
          "type": "hasMany",
          "model": "ModelMethod",
          "foreignKey": "model"
        },
        "views": {
          "type": "hasMany",
          "model": "ViewDefinition",
          "foreignKey": "model"
        }
      }
    }
  },
  "ModelMethod": {
    "properties": {
      "aliases": {"type": "array"},
      "isStatic": {"type": "boolean"},
      "accepts": {"type": "array"},
      "returns": {"type": "array"},
      "description": {"type": "string"},
      "http": {"type": "object"},
      "shared": {"type": "boolean"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ModelRelation": {
    "properties": {
      "type": {"type": "string"},
      "as": {"type": "string"},
      "foreignKey": {"type": "string"},
      "model": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ModelAccessControl": {
    "properties": {
      "property": {"type": "string"},
      "route": {"type": "string"},
      "principalId": {"type": "string"},
      "principalType": {"type": "string"},
      "permission": {"type": "string", "required": true}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ModelProperty": {
    "properties": {
      "type": {"type": "string"},
      "name": {"type": "string", "id": true},
      "generated": {"type": "boolean"},
      "required": {"type": "boolean"},
      "index": {"type": "boolean"},
      "modelName": "string",
      "desc": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity",
      "relations": {
        "validations": {
          "type": "hasMany",
          "model": "PropertyValid",
          "foreignKey": "property"
        }
      }
    }
  },
  "DatabaseColumn": {
    "connector": {"type": "string"},
    "columnName": {"type": "string"},
    "dataType": {"type": "string"},
    "dataLength": {"type": "string"},
    "nullable": {"type": "boolean"},
    "options": {
      "base": "WorkspaceEntity"
    },
    "public": true,
    "dataSource": "db"
  },
  "PropertyValidation": {
    "properties": {
      "type": {"type": "string"},
      "message": {"type": "string"},
      "min": {"type": "number"},
      "max": {"type": "string"},
      "int": {"type": "string"},
      "number": {"type": "string"},
      "with": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ViewDefinition": {
    "properties": {
      "model": "string"
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "defaultConfigFile": "views/$id.json",
      "configFiles": [
        "views.json",
        "views/*.json"
      ],
      "relations": {
        "children": {
          "type": "hasMany",
          "model": "ViewDefinition",
          "foreignKey": "parent"
        }
      }
    }
  },
  "DataSourceDefinition": {
    "properties": {
      "host": {"type": "string"},
      "port": {"type": "number"},
      "url": {"type": "string"},
      "database": {"type": "string"},
      "username": {"type": "string"},
      "password": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "defaultConfigFile": "datasources.json",
      "configFiles": [
        "datasources.json",
        "datasources.*.json"
      ],
      "relations": {
        "models": {
          "type": "hasMany",
          "model": "ModelDefinition",
          "foreignKey": "dataSource"
        },
        "component": {
          "type": "belongsTo",
          "model": "ComponentDefinition",
          "foreignKey": "componentName"
        }
      }
    }
  }
}
