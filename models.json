{
  "Workspace": {
    "properties": {
      "name": {"id": true, "type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "relations": {
      "models": {
        "type": "hasMany",
        "model": "AppDefinition",
        "foreignKey": "workspace"
      }
    }
  },
  "WorkspaceEntity": {
    "properties": {
      "configFile": {"type": "string"},
      "scriptFile": {"type": "string"},
      "configLineNum": {"type": "number"},
      "locked": {"type": "boolean"}
    },
    "public": false,
    "dataSource": "db"
  },
  "Definition": {
    "properties": {
      "name": {
        "type": "string",
        "id": true,
        "required": true
      },
      "dir": {
        "type": "string",
        "desc": "the directory name where the definition is persisted"
      }
    },
    "public": false,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "AppDefinition": {
    "properties": {
      "defaultPermission": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "configFiles": [
        "app.json",
        "app.*.json"
      ],
      "relations": {
        "models": {
          "type": "hasMany",
          "model": "ModelDefinition",
          "foreignKey": "appName"
        },
        "datasources": {
          "type": "hasMany",
          "model": "DataSourceDefinition",
          "foreignKey": "appName"
        }
      }
    }
  },
  "ModelDefinition": {
    "properties": {
      "plural": "string",
      "strict": "boolean",
      "scopes": "array",
      "public": "boolean",
      "indexes": "array"
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "configFiles": [
        "models.json",
        "models/*.json"
      ],
      "relations": {
        "properties": {
          "embed": true,
          "type": "hasMany",
          "model": "ModelProperty",
          "foreignKey": "modelName"
        },
        "relations": {
          "embed": true,
          "type": "hasMany",
          "model": "ModelRelation",
          "foreignKey": "fromModel"
        },
        "accessControls": {
          "embed": true,
          "type": "hasMany",
          "model": "ModelAccessControl",
          "foreignKey": "model"
        },
        "methods": {
          "embed": true,
          "type": "hasMany",
          "model": "ModelMethod",
          "foreignKey": "model"
        },
        "views": {
          "type": "hasMany",
          "model": "ViewDefinition",
          "foreignKey": "model"
        }
      }
    }
  },
  "ModelMethod": {
    "properties": {
      "aliases": {"type": "array"},
      "isStatic": {"type": "boolean"},
      "accepts": {"type": "array"},
      "returns": {"type": "array"},
      "description": {"type": "string"},
      "http": {"type": "object"},
      "shared": {"type": "boolean"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ModelRelation": {
    "properties": {
      "type": {"type": "string"},
      "as": {"type": "string"},
      "foreignKey": {"type": "string"},
      "model": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ModelAccessControl": {
    "properties": {
      "method": {"type": "string", "default": "ALL"},
      "route": {"type": "string"},
      "principalId": {"type": "string"},
      "principalType": {"type": "string"},
      "permission": {"type": "string", "required": true}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ModelProperty": {
    "properties": {
      "type": {"type": "string"},
      "name": {"type": "string"},
      "generated": {"type": "boolean"},
      "required": {"type": "boolean"},
      "index": {"type": "boolean"},
      "desc": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity",
      "relations": {
        "validations": {
          "type": "hasMany",
          "model": "PropertyValid",
          "foreignKey": "property"
        }
      }
    }
  },
  "DatabaseColumn": {
    "connector": {"type": "string"},
    "columnName": {"type": "string"},
    "dataType": {"type": "string"},
    "dataLength": {"type": "string"},
    "nullable": {"type": "boolean"},
    "options": {
      "base": "WorkspaceEntity"
    },
    "public": true,
    "dataSource": "db"
  },
  "PropertyValidation": {
    "properties": {
      "type": {"type": "string"},
      "message": {"type": "string"},
      "min": {"type": "number"},
      "max": {"type": "string"},
      "int": {"type": "string"},
      "number": {"type": "string"},
      "with": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "WorkspaceEntity"
    }
  },
  "ViewDefinition": {
    "properties": {
      "model": "string"
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "configFiles": [
        "views.json",
        "views/*.json"
      ],
      "relations": {
        "children": {
          "type": "hasMany",
          "model": "ViewDefinition",
          "foreignKey": "parent"
        }
      }
    }
  },
  "DataSourceDefinition": {
    "properties": {
      "host": {"type": "string"},
      "port": {"type": "number"},
      "url": {"type": "string"},
      "database": {"type": "string"},
      "username": {"type": "string"},
      "password": {"type": "string"}
    },
    "public": true,
    "dataSource": "db",
    "options": {
      "base": "Definition",
      "configFiles": [
        "datasources.json",
        "datasources.*.json"
      ],
      "relations": {
        "models": {
          "type": "hasMany",
          "model": "ModelDefinition",
          "foreignKey": "datasource"
        },
        "app": {
          "type": "belongsTo",
          "model": "AppDefinition",
          "foreignKey": "app"
        }
      }
    }
  }
}
